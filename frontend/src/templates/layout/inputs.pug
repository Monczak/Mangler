include mixins/inputs

.panel
    .row
        .col-12.col-md-4
            .hstack.p-2.d-flex
                button.btn#open-file-panel-btn
                    i.bi.bi-ib.bi-chevron-right
                
                .file-badge-container#file-badge-container
                    +fileBadge("Test 1")
                    +fileBadge("Test 2")
                    +fileBadge("Test 3")
        .col-12.col-md-6
            +textInput("test")
        .col-12.col-md-2
            p Submit

    .row#file-panel
        .col-lg-2.col-md-12
            .dropdown
                if examplenames|length > 0
                    button.btn.dropdown-toggle#dropdown-examples(type="button", data-bs-toggle="dropdown", aria-haspopup="true", aria-expanded="false").
                        Examples
                else
                    span.d-inline-block(tabindex="0", data-bs-toggle="tooltip", data-bs-placement="top", title="No examples available")
                        button.btn.dropdown-toggle.disabled#dropdown-examples(type="button", data-bs-toggle="dropdown", aria-haspopup="true", aria-expanded="false").
                            Examples
                .dropdown-menu(aria-labelledby="dropdown-examples")
                    each name in examplenames
                        a.dropdown-item(href="#")= name
        .col-lg-10.col-md-12
            span File Drop Zone